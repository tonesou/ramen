<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9", style = "margin-top: 50px;">
      <h1>User Info</h1>
      <%= form_with model: @user do |f| %>
        <h4>profile_image</h4>
        <%= f.file_field :profile_image %>
        <h4>name</h4>
        <%= f.text_field :name, rows: 5, class: "form-control" %>
        <h4>introduction</h4>
        <%= f.text_area :introduction, rows: 5, class: "form-control" %>
        <%= f.submit 'User Update' %>
      <% end %>
    </div>
  </div>
</div>