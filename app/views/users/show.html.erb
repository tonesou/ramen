<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9">
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th>introduction</th>
            <th>image</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @user.name %></td>
            <td><%= @user.introduction %></td>
            <td><%= image_tag @user.get_profile_image(100,100),class:"mt-3 rounded-circle" %></td>
            <td><%= link_to "edit", edit_user_path(@user) %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "new", new_post_path %>
    </div>
  </div>
</div>
