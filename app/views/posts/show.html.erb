<div class="container">
  <div class="row">
    <div class="col-3">
      <%= image_tag @post.user.get_profile_image(100,100),class:"mt-3 rounded-circle" %><br>
        <%= @post.user.name %><br>
        <%= @post.user.introduction %>
    </div>
    <div class="col-9", style = "margin-top: 50px;">
      <h1>ラーメンを詳しく！</h1>
      <table class="table">
        <thead>
          <tr>
            <th>shop</th>
            <th>genre</th>
            <th>explain</th>
            <th>image</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @post.shop %></td>
            <td><%= @post.genre %></td>
            <td><%= @post.explain %></td>
            <td><%= image_tag @post.get_image(100,100),class:"mt-3 rounded-circle" %></td>
            <td><%= link_to "edit", edit_post_path(@post) %></td>
            <td><%= link_to "destroy", post_path(@post), method: :delete %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>