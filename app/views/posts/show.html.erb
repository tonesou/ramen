<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9">
      <h1>ラーメンを詳しく！</h1>
      <table class="table">
        <thead>
          <tr>
            <th>shop</th>
            <th>explain</th>
            <th>image</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @post.shop %></td>
            <td><%= @post.explain %></td>
            <td><%= image_tag @post.get_image(100,100),class:"mt-3 rounded-circle" %></td>
            <td><%= link_to "edit", edit_post_path(@post) %></td>
            
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>