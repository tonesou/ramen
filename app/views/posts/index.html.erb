<div class = "back">
  <div class="container">
    <div class="row">
      <div class="col-3", style = "margin-top: 50px;">
        <%= search_form_for @q do |f| %>
          <%= f.label :explain, "Keyword" %>
          <%= f.search_field :name_cont %>

          <%= f.submit "検索" %>
        <% end %>
      </div>
      <div class="col-9", style = "margin-top: 50px;">
        <h1>みんなのラーメン</h1>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th>shop</th>
              <th>genre</th>
              <th>image</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |posts| %>
              <tr>
                <td><%= posts.user.name %></td>
                <td><%= posts.shop %></td>
                <td><%= posts.genre %></td>
                <td>
                  <%= link_to post_path(posts.id) do %>
                    <%= image_tag posts.get_image(100,100),class:"mt-3 rounded-circle" %></td>
                  <% end %>
                <td><%= link_to "show", post_path(posts.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>