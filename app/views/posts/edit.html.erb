<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9", style = "margin-top: 50px;">
      <h1>edit</h1>
      <%= form_with model: @post do |f| %>
        <h4>image</h4>
        <%= f.file_field :image %>
        <h4>shop</h4>
        <%= f.text_field :shop, rows: 5, class: "form-control" %>
        <h4>explain</h4>
        <%= f.text_area :explain, rows: 5, class: "form-control" %>
        <h4>genre</h4>
        <%= f.select :genre, ['ラーメン', 'つけ麺', '油そば', 'その他'], {include_blank: '---'} %>
        <%= f.submit 'Update Post' %>
      <% end %>
      <%= link_to "戻る", post_path(@post) %>
    </div>
  </div>
</div>